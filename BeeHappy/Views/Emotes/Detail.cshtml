@using CommonObjects.ViewModels.EmoteVMs
@model EmoteDetailsViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.EmoteName - Emote Details</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        discord: {
                            dark: '#1e1f22',
                            darker: '#1a1b1e',
                            darkest: '#0d0e10',
                            blurple: '#5865f2',
                            green: '#57f287',
                            yellow: '#fee75c',
                            red: '#ed4245',
                            gray: '#4e5058',
                            lightgray: '#6d6f78'
                        }
                    }
                }
            }
        }
    </script>
    <style>
        /* Custom styles for dropdown and animations */
        .dropdown-menu {
            opacity: 0;
            visibility: hidden;
            transform: translateY(-10px);
            transition: all 0.2s ease;
        }

            .dropdown-menu.show {
                opacity: 1;
                visibility: visible;
                transform: translateY(0);
            }

        .dropdown-arrow {
            transition: transform 0.2s ease;
        }

        .dropdown.active .dropdown-arrow {
            transform: rotate(180deg);
        }

        .notification {
            animation: slideIn 0.3s ease;
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
  

        /* Custom scrollbar */
        .channels-grid::-webkit-scrollbar {
            width: 8px;
        }

        .channels-grid::-webkit-scrollbar-track {
            background: #1a1b1e;
        }

        .channels-grid::-webkit-scrollbar-thumb {
            background: #4e5058;
            border-radius: 4px;
        }

            .channels-grid::-webkit-scrollbar-thumb:hover {
                background: #6d6f78;
            }
    </style>
</head>
<body class="bg-discord-darkest font-sans text-white">
    <div class="flex h-screen">
        <!-- Main Content -->
        <main class="flex flex-1 flex-col">
            <!-- Header Section -->
            <header class="bg-discord-darker border-discord-dark border-b p-6">
                <!-- Owner Info -->
                <div class="mb-8 flex items-center space-x-4">
                    <img src="@Model.OwnerAvatar" alt="@Model.OwnerName" class="h-12 w-12 rounded-full">
                    <span class="text-xl font-semibold text-white">@Model.OwnerName</span>
                </div>

                <!-- Emote Display -->
                <section class="text-center">
                    <h1 class="mb-10 text-4xl font-bold text-white">@Model.EmoteName</h1>

                    <!-- Emote Variants -->
                    <div class="mb-10 flex items-end justify-center space-x-6">
                        @foreach (var file in Model.EmoteFiles)
                        {
                            <div class="flex flex-col items-center">
                                <div class="bg-discord-dark mb-3 cursor-pointer rounded-lg p-3 transition-all duration-200 hover:bg-discord-gray hover:scale-105"
                                     style="width: @(file.Size + 24)px; height: @(file.Size + 24)px;">
                                    <img src="@file.Url"
                                         alt="@Model.EmoteName @(file.Size)x@(file.Size)"
                                         class="h-full w-full object-contain"
                                         style="width: @(file.Size)px; height: @(file.Size)px;">
                                </div>
                                <span class="text-sm font-medium text-gray-400">@(file.Size)×@(file.Size)</span>
                            </div>
                        }
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex justify-center space-x-4">
                        <button class="flex items-center space-x-2 rounded-md bg-white px-6 py-2.5 font-medium text-black transition-colors hover:bg-gray-200"
                                data-action="add-to-anime">
                            <span class="text-lg">+</span>
                            <span>Add Emote to Anime</span>
                        </button>
                        <button class="bg-discord-gray flex items-center space-x-2 rounded-md px-6 py-2.5 font-medium text-white transition-colors hover:bg-discord-lightgray"
                                data-action="add-to-collection">
                            <span>📁</span>
                            <span>Add to...</span>
                        </button>
                        <div class="dropdown relative">
                            <button class="bg-discord-gray flex items-center space-x-2 rounded-md px-4 py-2.5 font-medium text-white transition-colors hover:bg-discord-lightgray"
                                    data-dropdown="more-menu">
                                <span>More</span>
                                <span class="dropdown-arrow text-xs">▼</span>
                            </button>
                            <div class="dropdown-menu bg-discord-darker border-discord-dark absolute right-0 z-10 mt-2 w-48 rounded-md border shadow-lg"
                                 id="more-menu">
                                <a href="#" class="block px-4 py-2 text-sm text-white no-underline hover:bg-discord-dark" data-action="download">Download</a>
                                <a href="#" class="block px-4 py-2 text-sm text-white no-underline hover:bg-discord-dark" data-action="copy-link">Copy Link</a>
                                <a href="#" class="block px-4 py-2 text-sm text-white no-underline hover:bg-discord-dark" data-action="report">Report</a>
                            </div>
                        </div>
                    </div>
                </section>
            </header>

            <!-- Channels Section -->
            <section class="bg-discord-darkest flex-1 p-6">
                <div class="mb-6 flex items-center justify-between">
                    <div class="flex items-center space-x-6">
                        <button class="bg-discord-dark tab active flex items-center space-x-2 rounded-md px-4 py-2 font-medium text-white"
                                data-tab="channels">
                            <span class="text-lg">👥</span>
                            <span>Channels (@Model.TotalChannels)</span>
                        </button>
                        <button class="tab flex items-center space-x-2 rounded-md px-4 py-2 font-medium text-gray-400 transition-colors hover:bg-discord-dark hover:text-white"
                                data-tab="activity">
                            <span class="text-lg">⚡</span>
                            <span>Activity</span>
                        </button>
                    </div>
                    <div class="flex space-x-2">
                        <button class="rounded p-2 text-gray-400 transition-colors hover:bg-discord-dark hover:text-white"
                                data-direction="prev">
                            ◀
                        </button>
                        <button class="rounded p-2 text-gray-400 transition-colors hover:bg-discord-dark hover:text-white"
                                data-direction="next">
                            ▶
                        </button>
                    </div>
                </div>

                <!-- Channels Grid - Tighter spacing -->
                <div class="channels-grid grid grid-cols-8 gap-x-4 gap-y-3 sm:grid-cols-4 md:grid-cols-6 lg:grid-cols-7 xl:grid-cols-8">
                    @foreach (var channel in Model.Channels)
                    {
                        <div class="channel-item group flex cursor-pointer items-center space-x-2 rounded-md px-2 py-1.5 transition-colors hover:bg-discord-dark"
                             data-channel="@channel.Name">
                            <div class="relative flex-shrink-0">
                                <img src="@channel.Avatar" alt="@channel.Name" class="h-8 w-8 rounded-full">
                                @if (channel.IsOnline)
                                {
                                    <div class="bg-discord-green border-discord-darkest absolute -right-0.5 -bottom-0.5 h-3 w-3 rounded-full border-2"></div>
                                }
                            </div>
                            <span class="truncate text-sm font-medium transition-colors group-hover:text-white"
                                  style="color: @channel.Color">@channel.Name</span>
                        </div>
                    }
                </div>
            </section>
        </main>
    </div>

    <script src="~/js/emote-details.js"></script>
</body>
</html>
