<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - BeeTV</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/emotes-platform.css">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'primary': '#7C3AED',
                        'primary-dark': '#6D28D9',
                        'primary-light': '#8B5CF6',
                        'secondary': '#0EA5E9',
                        'secondary-dark': '#0284C7',
                        'accent': '#F59E0B',
                        'accent-dark': '#D97706',
                        'dark-bg': '#0A0A0F',
                        'dark-surface': '#1A1A2E',
                        'dark-border': '#2D2D44',
                        'dark-hover': '#252541'
                    },
                    fontFamily: {
                        'sans': ['Inter', 'system-ui', 'sans-serif']
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-dark-bg text-white font-sans">
    <!-- Navigation -->
    <nav class="flex items-center justify-between px-6 py-4 bg-dark-bg/95 backdrop-blur-sm border-b border-dark-border sticky top-0 z-40">
        <div class="flex items-center space-x-8">
            <div class="flex items-center space-x-2">
                <div class="w-8 h-8 flex items-center justify-center">
                    <img src="/images/bee.png" alt="My Image" class="w-full h-full object-contain" />
                </div>
                <span class="text-xl font-bold">BeeTV</span>
            </div>
            <div class="md:flex items-center space-x-6">
                <a href="@Url.Action("Index", "Emote")" class="text-gray-300 hover:text-white transition-colors font-medium">Emotes</a>
                <a href="#" class="text-gray-300 hover:text-white transition-colors font-medium">Store</a>
                <a href="#" class="text-gray-300 hover:text-white transition-colors font-medium">Help</a>
            </div>
        </div>

        <div class="flex items-center space-x-4">
            <div class="hidden md:block relative">
                <input type="text" placeholder="Search..." class="bg-dark-surface border border-dark-border rounded-lg px-4 py-2 text-sm focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary/50 transition-all">
                <svg class="absolute right-3 top-2.5 w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
            </div>
            <button class="md:hidden text-gray-300 hover:text-white">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>

            @if (User.Identity.IsAuthenticated)
            {
                <button onclick="beetvOpenUploadModal()"
                        class="flex items-center space-x-2 bg-primary hover:bg-primary-dark text-white px-4 py-2 rounded-lg font-medium transition-all">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    <span>Upload</span>
                </button>
            }

            @await Html.PartialAsync("_UserDropdown")
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="py-12 px-6 border-t border-dark-border bg-dark-surface/30">
        <div class="max-w-7xl mx-auto">
            <div class="flex flex-col md:flex-row justify-between items-center">
                <div class="flex items-center space-x-2 mb-4 md:mb-0">
                    <div class="w-8 h-8 bg-gradient-to-br from-primary to-secondary rounded-lg flex items-center justify-center shadow-lg">
                        <img src="/images/bee.png" alt="My Image" class="w-full h-full object-contain" />
                    </div>

                    <span class="text-xl font-bold">BeeTV</span>
                </div>

                <div class="flex items-center space-x-6">
                    <a href="#" class="text-gray-400 hover:text-white transition-colors p-2 rounded-lg hover:bg-dark-hover">
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
                        </svg>
                    </a>
                    <a href="#" class="text-gray-400 hover:text-white transition-colors p-2 rounded-lg hover:bg-dark-hover">
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                        </svg>
                    </a>
                    <a href="#" class="text-gray-400 hover:text-white transition-colors p-2 rounded-lg hover:bg-dark-hover">
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M20.317 4.3698a19.7913 19.7913 0 00-4.8851-1.5152.0741.0741 0 00-.0785.0371c-.211.3753-.4447.8648-.6083 1.2495-1.8447-.2762-3.68-.2762-5.4868 0-.1636-.3933-.4058-.8742-.6177-1.2495a.077.077 0 00-.0785-.037 19.7363 19.7363 0 00-4.8852 1.515.0699.0699 0 00-.0321.0277C.5334 9.0458-.319 13.5799.0992 18.0578a.0824.0824 0 00.0312.0561c2.0528 1.5076 4.0413 2.4228 5.9929 3.0294a.0777.0777 0 00.0842-.0276c.4616-.6304.8731-1.2952 1.226-1.9942a.076.076 0 00-.0416-.1057c-.6528-.2476-1.2743-.5495-1.8722-.8923a.077.077 0 01-.0076-.1277c.1258-.0943.2517-.1923.3718-.2914a.0743.0743 0 01.0776-.0105c3.9278 1.7933 8.18 1.7933 12.0614 0a.0739.0739 0 01.0785.0095c.1202.099.246.1981.3728.2924a.077.077 0 01-.0066.1276 12.2986 12.2986 0 01-1.873.8914.0766.0766 0 00-.0407.1067c.3604.698.7719 1.3628 1.225 1.9932a.076.076 0 00.0842.0286c1.961-.6067 3.9495-1.5219 6.0023-3.0294a.077.077 0 00.0313-.0552c.5004-5.177-.8382-9.6739-3.5485-13.6604a.061.061 0 00-.0312-.0286zM8.02 15.3312c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9555-2.4189 2.157-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419-.0190 1.3332-.9555 2.4189-2.1569 2.4189zm7.9748 0c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9554-2.4189 2.1569-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419 0 1.3332-.9555 2.4189-2.1568 2.4189Z" />
                        </svg>
                    </a>
                </div>
            </div>

            <div class="mt-8 pt-8 border-t border-dark-border text-center text-gray-400">
                <p class="font-medium">BeeTV is not affiliated with Twitch, Kick, YouTube or Discord</p>
                <div class="flex justify-center space-x-6 mt-4">
                    <a href="#" class="hover:text-white transition-colors font-medium">Privacy Policy</a>
                    <a href="#" class="hover:text-white transition-colors font-medium">Terms of Service</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Login Modal -->
    <div id="loginModal" class="fixed inset-0 bg-black/60 backdrop-blur-sm z-50 hidden flex items-center justify-center p-4">
        <div class="bg-dark-surface border border-dark-border rounded-2xl p-8 max-w-md w-full relative shadow-2xl">
            <button id="closeModal" class="absolute top-4 right-4 text-gray-400 hover:text-white p-2 rounded-lg hover:bg-dark-hover transition-all">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>

            <div class="text-center mb-8">
                <div class="w-12 h-12 bg-gradient-to-br from-primary to-secondary rounded-xl flex items-center justify-center mx-auto mb-4 shadow-lg">
                    <span class="text-xl">🐝</span>
                </div>
                <h2 class="text-2xl font-bold mb-2">Sign in to BeeTV</h2>
                <p class="text-gray-400">Sign in to your account to continue</p>
            </div>

            <div class="space-y-4">
                <button class="w-full bg-[#5865F2] hover:bg-[#4752C4] text-white px-6 py-3 rounded-lg font-medium transition-all flex items-center justify-center space-x-3 shadow-md hover:shadow-lg">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    <span>Continue with Discord</span>
                </button>

                <button class="w-full bg-[#9146FF] hover:bg-[#7928CA] text-white px-6 py-3 rounded-lg font-semibold transition-all flex items-center justify-center space-x-3 shadow-md hover:shadow-lg">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M11.571 4.714h1.715v5.143H11.57zm4.715 0H18v5.143h-1.714zM6.857 4.714h1.715v5.143H6.857z" />
                        <path d="M5.143 5.714v3.429c0 .946.771 1.714 1.714 1.714v2.286c0 .946.771 1.714 1.714 1.714h5.143c.943 0 1.714-.768 1.714-1.714v-2.286c.943 0 1.714-.768 1.714-1.714V5.714c0-.946-.771-1.714-1.714-1.714H6.857c-.943 0-1.714.768-1.714 1.714z" />
                    </svg>
                    <span>Continue with Twitch</span>
                </button>

                <a asp-controller="LoginGoogle" asp-action="Login"
                   class="w-full bg-white hover:bg-gray-100 text-gray-700 px-6 py-3 rounded-lg font-semibold transition-all flex items-center justify-center space-x-3 shadow-md hover:shadow-lg border">
                    <!-- Google icon -->
                    <svg class="w-5 h-5" viewBox="0 0 48 48">
                        <path fill="#EA4335" d="M24 9.5c3.94 0 6.6 1.7 8.1 3.1l5.9-5.9C34.6 3.4 29.8 1.5 24 1.5 14.9 1.5 7.1 6.7 3.6 14l7 5.4C12.3 14.5 17.7 9.5 24 9.5z" />
                        <path fill="#4285F4" d="M46.1 24.5c0-1.7-.1-3-.4-4.3H24v8.1h12.5c-.5 3.1-2 5.8-4.4 7.6l6.8 5.3c4-3.6 6.2-8.9 6.2-16.7z" />
                        <path fill="#FBBC05" d="M10.6 28.6c-1-3.1-1-6.4 0-9.5l-7-5.4C1.3 17.8 0 20.8 0 24c0 3.2 1.3 6.2 3.6 10l7-5.4z" />
                        <path fill="#34A853" d="M24 46c6.5 0 12-2.1 16-5.7l-6.8-5.3c-2 1.4-4.6 2.3-9.2 2.3-6.3 0-11.7-4-13.7-9.4l-7 5.4C7.1 41.3 14.9 46 24 46z" />
                    </svg>
                    <span>Continue with Google</span>
                </a>
            </div>

            <div class="mt-6 text-center text-sm text-gray-400">
                <div class="mt-4 space-x-4">
                    <a href="#" class="hover:text-white transition-colors font-medium">Terms of Service</a>
                    <span>and</span>
                    <a href="#" class="hover:text-white transition-colors font-medium">Privacy Policy</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Upload Modal -->
    @await Html.PartialAsync("_UploadModal")

    <script src="~/js/emotes-platform.js"></script>
    <script src="~/js/user-dropdown.js"></script>
    <script src="~/js/upload-modal.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
