<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BeeHappy</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    @* Font awesome css *@
    <link rel="stylesheet" href="~/css/all.min.css">
</head>
<body class="bg-stone-950 text-white">
    <partial name="_Notification" />
    <header>
        <!-- Navigation Bar -->
        <nav class="border-b border-stone-800 bg-stone-950 px-6 py-3 shadow shadow-md">
            <div class="flex items-center justify-between">
                <!-- Left Section -->
                <div class="flex items-center space-x-8">
                    <!-- Logo -->
                    <div class="flex items-center">
                        <span class="text-2xl font-bold text-white">BeeHappy</span>
                    </div>

                    <!-- Navigation Links -->
                    <div class="flex items-center space-x-6">
                        <a href="#" class="text-gray-300 transition-colors duration-200 hover:text-white">
                            Emotes
                        </a>
                        <a href="#" class="text-purple-400 transition-colors duration-200 hover:text-purple-300">
                            Store
                        </a>
                        <a href="#" class="text-gray-300 transition-colors duration-200 hover:text-white">
                            Help
                        </a>
                    </div>
                </div>

                <!-- Center Section - Search -->
                <div class="mx-8 max-w-md flex-1">
                    <div class="relative">
                        <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                            </svg>
                        </div>
                        <input type="text" placeholder="Search" class="placeholder-gray-400 w-full rounded-lg border border-gray-700 bg-zinc-800 py-2 pr-4 pl-10 text-gray-300 focus:border-gray-500 focus:ring-1 focus:ring-gray-500 focus:outline-none">
                    </div>
                </div>

                <!-- Right Section -->
                <div class="flex items-center space-x-4">
                    <!-- Upload Button -->
                    <button class="flex items-center space-x-2 rounded-lg border border-gray-700 bg-zinc-800 px-4 py-2 text-white transition-colors duration-200 hover:bg-gray-700">
                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                        </svg>
                        <span>Upload</span>
                    </button>

                    <!-- User Profile -->
                    <div class="flex items-center space-x-2">
                        <img src="data:image/svg+xml;base64," alt="User Avatar" class="h-8 w-8 rounded-full">
                        <span class="font-medium text-white">1o11hunt3r</span>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="px-2">
        <main role="main" class="w-full pb-3">
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted w-full px-4 py-8 text-white"> *@
    @*     <div class="container flex w-full justify-center"> *@
    @*         &copy; 2025 - BeeHappy - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
    @*     </div> *@
    @* </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
