@model BeeHappy.ViewModels.EmoteViewModel

@{
    ViewData["Title"] = "Emote Details";
}

<h2>Emote Details</h2>

<div class="card p-3">
    <h4>@Model.Name</h4>
    <dl class="row">
        <dt class="col-sm-2">Owner</dt>
        <dd class="col-sm-10">@Model.OwnerId</dd>

        <dt class="col-sm-2">Tags</dt>
        <dd class="col-sm-10">
            @if (Model.Tags != null && Model.Tags.Any())
            {
                foreach (var tag in Model.Tags)
                {
                    <span class="badge bg-primary me-1">@tag</span>
                }
            }
            else
            {
                <span class="text-muted">No tags</span>
            }
        </dd>

        <dt class="col-sm-2">Is Overlay</dt>
        <dd class="col-sm-10">@(Model.IsOverlaying ? "Yes" : "No")</dd>

        <dt class="col-sm-2">Visibility</dt>
        <dd class="col-sm-10">@string.Join(", ", Model.Visibility ?? new List<string>())</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@string.Join(", ", Model.Status ?? new List<string>())</dd>

        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreatedAt</dd>

        <dt class="col-sm-2">Updated At</dt>
        <dd class="col-sm-10">@Model.UpdatedAt</dd>
    </dl>

    <h5>Files</h5>
    @if (Model.Files != null && Model.Files.Any())
    {
        <div class="row">
            @foreach (var file in Model.Files)
            {
                <div class="col-md-3 mb-3 text-center">
                    <img src="@file.Url" class="img-fluid border rounded" alt="@Model.Name" />
                    <div>@file.Format.ToUpper() - @file.Size bytes</div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">No files uploaded</p>
    }
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
