@model BeeHappy.ViewModels.EmoteViewModel

<h2>Create Emote</h2>

<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Tag</label>
        <input asp-for="Tags[0]" class="form-control"  />
        <span asp-validation-for="Tags[0]" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Files</label>
        <input type="file" asp-for="Files[0].File" class="form-control" multiple />
        <span asp-validation-for="Files[0].File" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<div class="text-danger">
    @Html.ValidationSummary()
</div>
