@model BeeHappy.ViewModels.EmoteViewModel

<h2>Create Emote</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data" id="emoteForm">
    <div class="form-group">
        <label for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Files">Upload Files</label>
        <input type="file" name="Files[0].File" class="form-control" multiple />
        <span asp-validation-for="Files" class="text-danger"></span>
    </div>
    <div
        class="form-group">
        <label>Tag</label>
        <input asp-for="Tags[0]" class="form-control" />
        <span asp-validation-for="Tags[0]" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input type="checkbox" asp-for="IsOverlaying" class="form-check-input" />
        <label class="form-check-label" asp-for="IsOverlaying">Is Overlaying?</label>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function () {
            $("#emoteForm").validate({
                rules: {
                    "Name": {
                        required: true,
                        minlength: 2
                    },
                    "Files[0].File": {
                        required: true,
                        extension: "jpg|jpeg|png|gif",
                        filesize: 2097152 // 2MB
                    }
                },
                messages: {
                    "Name": {
                        required: "Please enter a name.",
                        minlength: "Name must be at least 2 characters."
                    },
                    "Files[0].File": {
                        required: "Please upload at least one file.",
                        extension: "Only JPG, PNG, GIF files are allowed.",
                        filesize: "File size cannot exceed 2 MB."
                    }
                }
            });

            // Custom rule for filesize
            $.validator.addMethod("filesize", function (value, element, param) {
                if (element.files.length === 0) return true;
                return element.files[0].size <= param;
            });
        });
    </script>
}

