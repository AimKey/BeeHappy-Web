<section id="gap-van-de" class="py-20 px-6 bg-dark-surface/50">
    <div class="max-w-4xl mx-auto lg:ml-72">
        <div class="text-center mb-12">
            <div
                class="w-16 h-16 bg-gradient-to-br from-primary to-secondary rounded-xl flex items-center justify-center mx-auto mb-6 shadow-lg">
                <span class="text-3xl">❓</span>
            </div>
