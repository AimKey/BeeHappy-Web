@{
    ViewData["Title"] = "BeeTV - The Emote Platform For All";
}

<!-- Hero Section -->
    <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-br from-primary/40 via-dark-bg to-secondary/35"></div>
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_80%,rgba(124,58,237,0.5),transparent_50%)]"></div>
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_70%_20%,rgba(14,165,233,0.4),transparent_50%)]"></div>

        <div class="relative z-10 max-w-7xl mx-auto px-6 grid lg:grid-cols-2 gap-12 items-center">
            <div class="text-center lg:text-left">
                <div class="mb-8">
                    <div class="w-20 h-20 rounded-2xl flex items-center justify-center mb-6 mx-auto lg:mx-0 overflow-hidden">
                        <img src="/images/bee.png" alt="My Image" class="w-full h-full object-contain" />
                    </div>
                </div>

                <h1 class="text-5xl lg:text-7xl font-bold mb-6 leading-tight text-balance">
                    THE EMOTE<br>
                    PLATFORM<br>
                    <span class="bg-gradient-to-r from-primary-light to-secondary bg-clip-text text-transparent">FOR ALL</span>
                </h1>

                <p class="text-xl text-gray-300 mb-8 max-w-lg mx-auto lg:mx-0 text-pretty">
                    Manage hundreds of emotes for your Twitch, Kick or YouTube channels with ease. Enhance your chatting experience.
                </p>

                <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
                    <button class="bg-primary hover:bg-primary-dark px-8 py-3 rounded-lg font-semibold transition-all shadow-lg hover:shadow-xl hover:scale-105">
                        Download
                    </button>
                    <button class="border border-gray-600 hover:border-gray-400 px-8 py-3 rounded-lg font-semibold transition-all hover:bg-dark-hover">
                        Learn More
                    </button>
                </div>
            </div>

            <div class="flex justify-center lg:justify-end">
                <div class="relative">
                    <img src="~/images/landing-page-placeholder.webp" alt="3D Crystal Decoration" class="w-80 h-80 object-contain">
                    <div class="absolute inset-0 bg-gradient-to-r from-primary/40 to-secondary/40 rounded-full blur-3xl"></div>
                </div>
            </div>
        </div>

    </section>

    <!-- CTA Section -->
    <section class="py-20 px-6 bg-dark-surface/50 relative overflow-hidden">
        <div class="relative max-w-4xl mx-auto text-center">
            <h2 class="text-4xl font-bold mb-4 text-balance">Get Started</h2>
            <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto text-pretty">
                Start your journey with hundreds of emotes and powerful tools for your channel. Choose your platform below to begin.
            </p>
            <div class="flex flex-wrap justify-center gap-4">
                <button class="bg-dark-surface border border-dark-border px-6 py-2 rounded-lg hover:border-primary/60 hover:bg-dark-hover transition-all flex items-center space-x-2 shadow-md">
                    <span>🌐</span>
                    <span>Web Extension</span>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                </button>
                @* <button class="bg-dark-surface border border-dark-border px-6 py-2 rounded-lg hover:border-primary/60 hover:bg-dark-hover transition-all flex items-center space-x-2 shadow-md">
                    <span>💬</span>
                    <span>Chatterino</span>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                </button>
                <button class="bg-dark-surface border border-dark-border px-6 py-2 rounded-lg hover:border-primary/60 hover:bg-dark-hover transition-all flex items-center space-x-2 shadow-md">
                    <span>📱</span>
                    <span>Mobile Apps</span>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                </button> *@
            </div>
        </div>
    </section>

    <!-- Why BeeHappy Section -->
    <section class="py-20 px-6 bg-dark-surface/20">
        <div class="max-w-7xl mx-auto">
            <div class="text-center mb-16">
                <h2 class="text-4xl font-bold mb-4 text-balance">Why BeeHappy?</h2>
                <p class="text-xl text-gray-400 text-pretty">Our platform offers a variety of useful features that will enhance your chatting experience.</p>
            </div>

            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                <!-- Feature Card 1 -->
                <div class="bg-dark-surface border border-dark-border rounded-xl p-8 hover:border-primary/60 hover:bg-dark-hover transition-all shadow-lg hover:shadow-xl">
                    <div class="w-16 h-16 bg-gradient-to-br from-primary to-secondary rounded-xl flex items-center justify-center mb-6 shadow-lg">
                        <span class="text-2xl">🎯</span>
                    </div>
                    <h3 class="text-2xl font-bold mb-4">1000 Emote Slots</h3>
                    <p class="text-gray-400 mb-6 text-pretty">Everyone gets 1000 customizable channel emote slots, all for free. Keep all your emotes in one place.</p>
                    <button class="text-primary hover:text-primary-light font-semibold flex items-center space-x-2 transition-colors">
                        <span>Browse Emotes</span>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </button>
                </div>

                <!-- Feature Card 2 -->
                <div class="bg-dark-surface border border-dark-border rounded-xl p-8 hover:border-primary/60 hover:bg-dark-hover transition-all shadow-lg hover:shadow-xl">
                    <div class="w-16 h-16 bg-gradient-to-br from-secondary to-accent rounded-xl flex items-center justify-center mb-6 shadow-lg">
                        <span class="text-2xl">📦</span>
                    </div>
                    <h3 class="text-2xl font-bold mb-4">Emote Sets</h3>
                    <p class="text-gray-400 mb-6 text-pretty">Group emotes in customizable sets that can be shared with other users or quickly swapped onto your channel.</p>
                    <button class="text-primary hover:text-primary-light font-semibold flex items-center space-x-2 transition-colors">
                        <span>Create an Emote Set</span>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </button>
                </div>

                <!-- Feature Card 3 -->
                <div class="bg-dark-surface border border-dark-border rounded-xl p-8 hover:border-primary/60 hover:bg-dark-hover transition-all shadow-lg hover:shadow-xl">
                    <div class="w-16 h-16 bg-gradient-to-br from-accent to-primary rounded-xl flex items-center justify-center mb-6 shadow-lg">
                        <span class="text-2xl">✏️</span>
                    </div>
                    <h3 class="text-2xl font-bold mb-4">Custom Emote Names</h3>
                    <p class="text-gray-400 mb-6 text-pretty">Don't like the name given to an emote by its author? That's fine, you can change it for your channel only.</p>
                    <button class="text-primary hover:text-primary-light font-semibold flex items-center space-x-2 transition-colors">
                        <span>Browse Emotes</span>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </button>
                </div>

                <!-- Feature Card 4 -->
                <div class="bg-dark-surface border border-dark-border rounded-xl p-8 hover:border-primary/60 hover:bg-dark-hover transition-all shadow-lg hover:shadow-xl">
                    <div class="w-16 h-16 bg-gradient-to-br from-primary to-secondary rounded-xl flex items-center justify-center mb-6 shadow-lg">
                        <span class="text-2xl">⚡</span>
                    </div>
                    <h3 class="text-2xl font-bold mb-4">Real-Time Updates</h3>
                    <p class="text-gray-400 mb-6 text-pretty">Changing emotes in your channel happens instantly, for all viewers. No F5 required, no more waiting.</p>
                    <button class="text-primary hover:text-primary-light font-semibold flex items-center space-x-2 transition-colors">
                        <span>Download the Extension</span>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </button>
                </div>

                <!-- Feature Card 5 -->
                <div class="bg-dark-surface border border-dark-border rounded-xl p-8 hover:border-primary/60 hover:bg-dark-hover transition-all shadow-lg hover:shadow-xl">
                    <div class="w-16 h-16 bg-gradient-to-br from-secondary to-accent rounded-xl flex items-center justify-center mb-6 shadow-lg">
                        <span class="text-2xl">👥</span>
                    </div>
                    <h3 class="text-2xl font-bold mb-4">Large Community</h3>
                    <p class="text-gray-400 mb-6 text-pretty">BeeTV serves 2,000,000+ daily unique users and has a library of over 1,000,000 public emotes.</p>
                    <button class="text-primary hover:text-primary-light font-semibold flex items-center space-x-2 transition-colors">
                        <span>Join our Discord</span>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </button>
                </div>

                <!-- Feature Card 6 -->
                <div class="bg-dark-surface border border-dark-border rounded-xl p-8 hover:border-primary/60 hover:bg-dark-hover transition-all shadow-lg hover:shadow-xl">
                    <div class="w-16 h-16 bg-gradient-to-br from-accent to-primary rounded-xl flex items-center justify-center mb-6 shadow-lg">
                        <span class="text-2xl">🚀</span>
                    </div>
                    <h3 class="text-2xl font-bold mb-4">Next-gen Formats</h3>
                    <p class="text-gray-400 mb-6 text-pretty">We use newer, more optimized image formats like WebP and AVIF, to reduce bandwidth usage.</p>
                    <button class="text-primary hover:text-primary-light font-semibold flex items-center space-x-2 transition-colors">
                        <span>Download the Extension</span>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </section>

